{
  "version": "1.0",
  "locale": "de",
  "flow": [
    {
      "id": "intro",
      "type": "info",
      "headline": "Anonyme Befragung",
      "text": "Im Folgenden wirst Du zu Deinen Fluchtgründen befragt. Du musst keine persönlichen Daten angeben. Bitte schildere Deine Situation so genau wie möglich.",
      "next": "geschlecht"
    },
    {
      "id": "geschlecht",
      "type": "radio",
      "question": "Welches Geschlecht hast Du?",
      "required": true,
      "options": [
        { "label": "Männlich", "value": "m" },
        { "label": "Weiblich", "value": "w" },
        { "label": "Divers", "value": "d" }
      ],
      "onAnswer": { "set": { "geschlecht": "$value" } },
      "next": "alter_bucket"
    },
    {
      "id": "alter_bucket",
      "type": "radio",
      "question": "Wie alt bist Du?",
      "required": true,
      "options": [
        { "label": "0–17 Jahre",  "value": "0_17" },
        { "label": "18–25 Jahre", "value": "18_25" },
        { "label": "26–42 Jahre", "value": "26_42" },
        { "label": "43–55 Jahre", "value": "43_55" },
        { "label": "56–72 Jahre", "value": "56_72" },
        { "label": "73–99 Jahre", "value": "73_99" }
      ],
      "onAnswer": { "set": { "alter_bucket": "$value" } },
      "next": "route_unbegleitet"
    },
    {
      "id": "route_unbegleitet",
      "type": "router",
      "next": { "expr": "(alter_bucket === '0_17') ? 'minor_unbegleitet_hint' : 'herkunftsland'" }
    },
    {
      "id": "minor_unbegleitet_hint",
      "type": "radio",
      "question": "Reist Du unbegleitet?",
      "required": true,
      "options": [
        { "label": "Ja, unbegleitet", "value": "alleine" },
        { "label": "Nein, mit Elternteil", "value": "mit_eltern" }
      ],
      "onAnswer": { "set": { "unbegleitet": "$value" } },
      "next": "herkunftsland"
    },
    {
      "id": "herkunftsland",
      "type": "radio",
      "question": "Aus welchem Land kommst Du?",
      "required": true,
      "options": [
        { "label": "Türkei",      "value": "TR" },
        { "label": "Syrien",      "value": "SY" },
        { "label": "Afghanistan", "value": "AF" },
        { "label": "Iran",        "value": "IR" },
        { "label": "Irak",        "value": "IQ" }
      ],
      "onAnswer": { "set": { "herkunftsland": "$value" } },
      "next": "zielland"
    },
    {
      "id": "zielland",
      "type": "radio",
      "question": "Für welches Land möchtest Du Informationen zum Asylverfahren?",
      "required": true,
      "options": [
        { "label": "Deutschland", "value": "DE" },
        { "label": "Frankreich",  "value": "FR" },
        { "label": "Spanien",     "value": "ES" },
        { "label": "Italien",     "value": "IT" },
        { "label": "Belgien", "value": "BE" }, { "label": "Bulgarien", "value": "BG" },
        { "label": "Dänemark", "value": "DK" }, { "label": "Estland", "value": "EE" },
        { "label": "Finnland", "value": "FI" }, { "label": "Griechenland", "value": "GR" },
        { "label": "Irland", "value": "IE" }, { "label": "Kroatien", "value": "HR" },
        { "label": "Lettland", "value": "LV" }, { "label": "Litauen", "value": "LT" },
        { "label": "Luxemburg", "value": "LU" }, { "label": "Malta", "value": "MT" },
        { "label": "Niederlande", "value": "NL" }, { "label": "Österreich", "value": "AT" },
        { "label": "Polen", "value": "PL" }, { "label": "Portugal", "value": "PT" },
        { "label": "Rumänien", "value": "RO" }, { "label": "Schweden", "value": "SE" },
        { "label": "Slowakei", "value": "SK" }, { "label": "Slowenien", "value": "SI" },
        { "label": "Tschechien", "value": "CZ" }, { "label": "Ungarn", "value": "HU" },
        { "label": "Zypern", "value": "CY" }
      ],
      "onAnswer": { "set": { "zielland": "$value" } },
      "next": "im_zielland"
    },
    {
      "id": "im_zielland",
      "type": "radio",
      "question": "Befindest Du Dich bereits in {{zielland_label}}?",
      "required": true,
      "options": [
        { "label": "Ja, ich bin bereits dort", "value": "A" },
        { "label": "Nein, ich bin noch außerhalb", "value": "B" }
      ],
      "nextMap": { "A": "reiseweg_A", "B": "reiseweg_B_visa_plan" }
    },

    {
      "id": "reiseweg_A",
      "type": "radio",
      "question": "Wie bist Du eingereist?",
      "required": true,
      "options": [
        { "label": "Mit einem Visum von {{zielland_label}}", "value": "visum_zielland" },
        { "label": "Mit einem Visum eines anderen Staates", "value": "visum_anders" },
        { "label": "Mit Aufenthaltstitel eines anderen EU-/Dublin-Staates", "value": "aufenthaltstitel" },
        { "label": "Ohne Visum / über Drittstaat / Sonstiges", "value": "ohne" }
      ],
      "onAnswer": { "set": { "reiseweg": "$value" } },
      "nextMap": {
        "visum_zielland": "biometrie_anderswo",
        "visum_anders": "visum_details_A",
        "aufenthaltstitel": "aufenthaltstitel_details_A",
        "ohne": "biometrie_anderswo"
      }
    },
    {
      "id": "visum_details_A",
      "type": "radio",
      "question": "Welches Land hat Dein Einreisevisum ausgestellt?",
      "required": true,
      "options": [
        { "label": "Deutschland", "value": "DE" },
        { "label": "Frankreich",  "value": "FR" },
        { "label": "Spanien",     "value": "ES" },
        { "label": "Italien",     "value": "IT" },
        { "label": "Belgien", "value": "BE" }, { "label": "Bulgarien", "value": "BG" },
        { "label": "Dänemark", "value": "DK" }, { "label": "Estland", "value": "EE" },
        { "label": "Finnland", "value": "FI" }, { "label": "Griechenland", "value": "GR" },
        { "label": "Irland", "value": "IE" }, { "label": "Kroatien", "value": "HR" },
        { "label": "Lettland", "value": "LV" }, { "label": "Litauen", "value": "LT" },
        { "label": "Luxemburg", "value": "LU" }, { "label": "Malta", "value": "MT" },
        { "label": "Niederlande", "value": "NL" }, { "label": "Österreich", "value": "AT" },
        { "label": "Polen", "value": "PL" }, { "label": "Portugal", "value": "PT" },
        { "label": "Rumänien", "value": "RO" }, { "label": "Schweden", "value": "SE" },
        { "label": "Slowakei", "value": "SK" }, { "label": "Slowenien", "value": "SI" },
        { "label": "Tschechien", "value": "CZ" }, { "label": "Ungarn", "value": "HU" },
        { "label": "Zypern", "value": "CY" },
        { "label": "Norwegen", "value": "NO" },
        { "label": "Schweiz", "value": "CH" }
      ],
      "onAnswer": { "set": { "hat_visum": true, "visum_aussteller": "$value" } },
      "next": "biometrie_anderswo"
    },
    {
      "id": "aufenthaltstitel_details_A",
      "type": "radio",
      "question": "Welches Land hat Deinen Aufenthaltstitel ausgestellt?",
      "required": true,
      "options": [
        { "label": "Deutschland", "value": "DE" },
        { "label": "Frankreich",  "value": "FR" },
        { "label": "Spanien",     "value": "ES" },
        { "label": "Italien",     "value": "IT" },
        { "label": "Belgien", "value": "BE" }, { "label": "Bulgarien", "value": "BG" },
        { "label": "Dänemark", "value": "DK" }, { "label": "Estland", "value": "EE" },
        { "label": "Finnland", "value": "FI" }, { "label": "Griechenland", "value": "GR" },
        { "label": "Irland", "value": "IE" }, { "label": "Kroatien", "value": "HR" },
        { "label": "Lettland", "value": "LV" }, { "label": "Litauen", "value": "LT" },
        { "label": "Luxemburg", "value": "LU" }, { "label": "Malta", "value": "MT" },
        { "label": "Niederlande", "value": "NL" }, { "label": "Österreich", "value": "AT" },
        { "label": "Polen", "value": "PL" }, { "label": "Portugal", "value": "PT" },
        { "label": "Rumänien", "value": "RO" }, { "label": "Schweden", "value": "SE" },
        { "label": "Slowakei", "value": "SK" }, { "label": "Slowenien", "value": "SI" },
        { "label": "Tschechien", "value": "CZ" }, { "label": "Ungarn", "value": "HU" },
        { "label": "Zypern", "value": "CY" }, { "label": "Norwegen", "value": "NO" },
        { "label": "Schweiz", "value": "CH" }
      ],
      "onAnswer": { "set": { "hat_aufenthaltstitel": true, "aufenthaltstitel_aussteller": "$value" } },
      "next": "aufenthaltstitel_gueltigkeit"
    },
    {
      "id": "aufenthaltstitel_gueltigkeit",
      "type": "date",
      "question": "Bis wann ist Dein Aufenthaltstitel gültig? (Datum auswählen)",
      "required": true,
      "onAnswer": { "set": { "aufenthaltstitel_bis": "$value" } },
      "next": "biometrie_anderswo"
    },

    {
      "id": "biometrie_anderswo",
      "type": "radio",
      "question": "Wurden Dir in einem anderen EU-/Dublin-Staat bereits Fingerabdrücke abgenommen?",
      "required": true,
      "options": [
        { "label": "Ja", "value": true },
        { "label": "Nein", "value": false }
      ],
      "onAnswer": { "set": { "fingerabdruecke_anderswo": "$value" } },
      "next": "asyl_anderswo"
    },
    {
      "id": "asyl_anderswo",
      "type": "radio",
      "question": "Hast Du in einem anderen EU-/Dublin-Staat bereits einen Asylantrag gestellt (auch unfreiwillig)?",
      "required": true,
      "options": [
        { "label": "Ja", "value": true },
        { "label": "Nein", "value": false }
      ],
      "onAnswer": { "set": { "asylantrag_anderswo": "$value" } },
      "next": "verfahrensstand_A1"
    },

    {
      "id": "verfahrensstand_A1",
      "type": "radio",
      "question": "Hast Du in {{zielland_label}} bereits einen Asylantrag gestellt?",
      "required": true,
      "options": [
        { "label": "Ja", "value": true },
        { "label": "Nein", "value": false }
      ],
      "onAnswer": { "set": { "asylantrag_gestellt": "$value" } },
      "nextMap": { "true": "anhoerung_A", "false": "fluchtgruende" }
    },
    {
      "id": "anhoerung_A",
      "type": "radio",
      "question": "Hattest Du bereits eine Anhörung?",
      "required": true,
      "options": [
        { "label": "Ja", "value": true },
        { "label": "Nein", "value": false }
      ],
      "onAnswer": { "set": { "anhoerung": "$value" } },
      "nextMap": { "true": "entscheidung_A", "false": "fluchtgruende" }
    },
    {
      "id": "entscheidung_A",
      "type": "radio",
      "question": "Gibt es bereits eine Entscheidung?",
      "required": true,
      "options": [
        { "label": "Ja", "value": true },
        { "label": "Nein", "value": false }
      ],
      "onAnswer": { "set": { "entscheidung": "$value" } },
      "nextMap": { "true": "entscheidung_typ", "false": "fluchtgruende" }
    },
    {
      "id": "entscheidung_typ",
      "type": "radio",
      "question": "Welche Entscheidung hast Du erhalten?",
      "required": true,
      "options": [
        { "label": "Asylberechtigung", "value": "asyl" },
        { "label": "Flüchtlingsschutz", "value": "gfk" },
        { "label": "Subsidiärer Schutz", "value": "subs" },
        { "label": "Nationales Abschiebungsverbot", "value": "nab" },
        { "label": "Ablehnung / Unzulässigkeit", "value": "negativ" }
      ],
      "onAnswer": { "set": { "entscheidung_typ": "$value" } },
      "next": "fluchtgruende"
    },

  
    {
      "id": "reiseweg_B_visa_plan",
      "type": "radio",
      "question": "Wie beabsichtigst Du einzureisen?",
      "required": true,
      "options": [
        { "label": "Mit Visum des Ziellandes", "value": "ja_zielland" },
        { "label": "Mit Visum eines anderen Staates (Dublin-Teilnehmer)", "value": "nein_anders" },
        { "label": "Weiß noch nicht", "value": "unsicher" }
      ],
      "onAnswer": {
        "set": {
          "hat_visum": { "expr": "$value == 'ja_zielland'" },
          "visum_aussteller": { "expr": "$value == 'ja_zielland' ? $zielland : null" }
        }
      },
      "nextMap": { "nein_anders": "reiseweg_B_aussteller", "ja_zielland": "biometrie_anderswo", "unsicher": "biometrie_anderswo" }
    },
    {
      "id": "reiseweg_B_aussteller",
      "type": "radio",
      "question": "Welches Land wird voraussichtlich Dein Visum ausstellen?",
      "required": true,
      "options": [
        { "label": "Deutschland", "value": "DE" },
        { "label": "Frankreich", "value": "FR" },
        { "label": "Spanien", "value": "ES" },
        { "label": "Italien", "value": "IT" },
        { "label": "Belgien", "value": "BE" }, { "label": "Bulgarien", "value": "BG" },
        { "label": "Dänemark", "value": "DK" }, { "label": "Estland", "value": "EE" },
        { "label": "Finnland", "value": "FI" }, { "label": "Griechenland", "value": "GR" },
        { "label": "Irland", "value": "IE" }, { "label": "Kroatien", "value": "HR" },
        { "label": "Lettland", "value": "LV" }, { "label": "Litauen", "value": "LT" },
        { "label": "Luxemburg", "value": "LU" }, { "label": "Malta", "value": "MT" },
        { "label": "Niederlande", "value": "NL" }, { "label": "Österreich", "value": "AT" },
        { "label": "Polen", "value": "PL" }, { "label": "Portugal", "value": "PT" },
        { "label": "Rumänien", "value": "RO" }, { "label": "Schweden", "value": "SE" },
        { "label": "Slowakei", "value": "SK" }, { "label": "Slowenien", "value": "SI" },
        { "label": "Tschechien", "value": "CZ" }, { "label": "Ungarn", "value": "HU" },
        { "label": "Zypern", "value": "CY" }, { "label": "Norwegen", "value": "NO" },
        { "label": "Schweiz", "value": "CH" }
      ],
      "onAnswer": { "set": { "visum_aussteller": "$value" } },
      "next": "biometrie_anderswo"
    },

    {
      "id": "fluchtgruende",
      "type": "checkbox",
      "question": "Welche Fluchtgründe treffen auf Dich zu? (Mehrfachauswahl möglich)",
      "required": true,
      "options": [
        { "label": "Internationaler oder innerstaatlicher Konflikt", "value": "konflikt" },
        { "label": "Willkürliche Gewalt / Folter / Todesstrafe", "value": "gewalt" },
        { "label": "Religion", "value": "religion" },
        { "label": "Nationalität / Ethnie", "value": "nationalitaet" },
        { "label": "Politische Überzeugung / Aktivität", "value": "politisch" },
        { "label": "Zugehörigkeit zu einer sozialen Gruppe (z. B. Frauen, LGBTIQ+)", "value": "soziale_gruppe" },
        { "label": "Gesundheitliche Gründe", "value": "gesundheit" },
        { "label": "Wehr-/Militärdienst", "value": "wehrdienst" },
        { "label": "Wirtschaftliche Gründe", "value": "wirtschaft" },
        { "label": "Familiäre Gründe", "value": "familie" },
        { "label": "Klimawandel / Umwelt", "value": "klima" },
        { "label": "Andere Gründe", "value": "andere" }
      ],
      "onAnswer": { "set": { "fluchtgruende": "$value" } },
      "next": "flucht_details_freitext"
    },
    {
      "id": "flucht_details_freitext",
      "type": "textarea",
      "question": "In Deinen Worten: Was ist passiert? Welche Bedrohung/Gefahr besteht für Dich in {{herkunftsland_label}}? Bitte beschreibe genau.",
      "required": false,
      "onAnswer": { "set": { "flucht_ereignis_beschr": "$value" } },
      "next": "quelle_verfolgung"
    },
    {
      "id": "quelle_verfolgung",
      "type": "radio",
      "question": "Von wem geht die Verfolgung aus?",
      "required": true,
      "options": [
        { "label": "Staatliche Stellen (z. B. Polizei, Geheimdienst, Militär, Gerichte)", "value": "staat" },
        { "label": "Private/Organisationen (z. B. Familie, Clan, Miliz)", "value": "privat" },
        { "label": "Keine Angabe / Unsicher", "value": "unsicher" }
      ],
      "onAnswer": { "set": { "quelle_verfolgung": "$value" } },
      "nextMap": { "privat": "innerstaatlicher_schutz_ja_nein", "unsicher": "innerstaatlicher_schutz_ja_nein", "staat": "need_nachflucht" }
    },
    {
      "id": "innerstaatlicher_schutz_ja_nein",
      "type": "radio",
      "question": "Hast Du innerhalb von {{herkunftsland_label}} versucht, Schutz zu bekommen?",
      "required": true,
      "options": [
        { "label": "Ja", "value": "ja" },
        { "label": "Nein", "value": "nein" },
        { "label": "Weiß nicht", "value": "wd" }
      ],
      "onAnswer": { "set": { "innerstaatlicher_schutz_versucht": "$value" } },
      "next": "innerstaatlicher_schutz_details"
    },
    {
      "id": "innerstaatlicher_schutz_details",
      "type": "textarea",
      "question": { "expr": "(innerstaatlicher_schutz_versucht === 'ja') ? 'Was genau hast Du versucht?' : 'Warum nicht?'" },
      "required": false,
      "onAnswer": { "set": { "innerstaatlicher_schutz_details": "$value" } },
      "next": "need_nachflucht"
    },
    {
      "id": "need_nachflucht",
      "type": "router",
      "next": { "expr": "(fluchtgruende && (fluchtgruende.indexOf('politisch')>=0 || fluchtgruende.indexOf('religion')>=0 || fluchtgruende.indexOf('soziale_gruppe')>=0)) ? 'plausi_nachflucht' : 'abschluss_hint'" }
    },
    {
      "id": "plausi_nachflucht",
      "type": "radio",
      "question": "Lebst Du Merkmale Deiner Überzeugung/Identität jetzt offen aus (z. B. politische Aktivität, religiöse Praxis, LGBTIQ+)?",
      "required": true,
      "options": [
        { "label": "Ja", "value": "ja" },
        { "label": "Nein", "value": "nein" },
        { "label": "Weiß nicht / noch nicht", "value": "wd" }
      ],
      "onAnswer": { "set": { "nachfluchtverhalten": "$value" } },
      "next": "abschluss_hint"
    },

    {
      "id": "abschluss_hint",
      "type": "info",
      "headline": "Vielen Dank!",
      "text": "Du kannst jetzt Deine individuelle PDF-Beratung bestellen. <br><br><a class=\"btn-primary\" href=\"/beratung\">Beratung bestellen (119&nbsp;€)</a>",
      "next": null
    }
  ]
}
