{
  "locale": "de",
  "version": "2025-10-19-lite-1",
  "steps": [
    { "id": "intro_note", "title": "Anonyme Befragung", "description": "Keine persönlichen Daten nötig (kein Name, kein Geburtsdatum). Beantworte die Fragen Schritt für Schritt.", "type": "text" },

    { "id": "lang", "title": "In welcher Sprache möchtest du fortfahren?", "type": "single", "required": true,
      "options": [
        { "value": "de", "label": "Deutsch" },
        { "value": "tr", "label": "Türkçe" },
        { "value": "en", "label": "English" }
      ]
    },

    { "id": "country", "title": "Aus welchem Land kommst du?", "type": "single", "required": true,
      "options": [
        { "value": "TR", "label": "Türkei" },
        { "value": "SY", "label": "Syrien" },
        { "value": "AF", "label": "Afghanistan" },
        { "value": "IQ", "label": "Irak" },
        { "value": "IR", "label": "Iran" },
        { "value": "other", "label": "Anderes Land" }
      ]
    },
    { "id": "current_location", "title": "Wo befindest du dich aktuell? (Land / Stadt)", "type": "text" },
    { "id": "destination", "title": "In welchem Land willst du Schutz beantragen oder hast du ihn beantragt?", "type": "single", "required": true,
      "options": [
        { "value": "DE", "label": "Deutschland" },
        { "value": "AT", "label": "Österreich" },
        { "value": "SE", "label": "Schweden" },
        { "value": "NL", "label": "Niederlande" },
        { "value": "other", "label": "Anderes EU-Land" }
      ]
    },
    { "id": "age", "title": "Wie alt bist du?", "type": "number", "required": true },
    { "id": "gender", "title": "Dein Geschlecht", "type": "single", "required": true,
      "options": [
        { "value": "male", "label": "Männlich" },
        { "value": "female", "label": "Weiblich" },
        { "value": "other", "label": "Divers / keine Angabe" }
      ]
    },
    { "id": "unaccompanied", "title": "Bist du unbegleitet minderjährig?", "type": "yesno", "showIf": "age != null && age < 18" },

    { "id": "in_target", "title": "Bist du bereits im Zielland?", "type": "single", "required": true,
      "options": [
        { "value": "A", "label": "Ja, ich bin im Zielland" },
        { "value": "B", "label": "Nein, ich bin noch außerhalb" }
      ]
    },

    { "id": "entry_mode", "title": "Wie bist du eingereist?", "type": "single", "required": true,
      "showIf": "in_target == 'A'",
      "options": [
        { "value": "visa", "label": "Mit Visum" },
        { "value": "permit", "label": "Mit Aufenthaltstitel eines anderen EU-Staates" },
        { "value": "none", "label": "Ohne Visum / über Drittstaat / Sonstiges" }
      ]
    },
    { "id": "visa_issuer", "title": "Welches Land hat dein Einreisevisum ausgestellt?", "type": "text", "required": true,
      "showIf": "in_target == 'A' && entry_mode == 'visa'"
    },
    { "id": "visa_valid_from", "title": "Visum: gültig von (Datum)", "type": "date", "required": true,
      "showIf": "in_target == 'A' && entry_mode == 'visa'"
    },
    { "id": "visa_valid_to", "title": "Visum: gültig bis (Datum)", "type": "date", "required": true,
      "showIf": "in_target == 'A' && entry_mode == 'visa'"
    },
    { "id": "visa_applied_on", "title": "Wann hast du das Visum beantragt?", "type": "date", "required": true,
      "showIf": "in_target == 'A' && entry_mode == 'visa'"
    },

    { "id": "permit_issuer", "title": "Welches Land hat deinen Aufenthaltstitel ausgestellt?", "type": "text", "required": true,
      "showIf": "in_target == 'A' && entry_mode == 'permit'"
    },
    { "id": "permit_valid_to", "title": "Aufenthaltstitel gültig bis (Datum)", "type": "date", "required": true,
      "showIf": "in_target == 'A' && entry_mode == 'permit'"
    },

    { "id": "eurodac", "title": "Wurden deine Fingerabdrücke in einem anderen EU-Land abgenommen (EURODAC)?", "type": "yesno", "required": true,
      "showIf": "in_target == 'A' || in_target == 'B'"
    },
    { "id": "asylum_elsewhere", "title": "Hast du in einem anderen EU-Land einen Asylantrag gestellt (auch unfreiwillig)?", "type": "yesno", "required": true,
      "showIf": "in_target == 'A' || in_target == 'B'"
    },

    { "id": "asylum_applied", "title": "Hast du im Zielland bereits einen Asylantrag gestellt?", "type": "yesno", "required": true,
      "showIf": "in_target == 'A'"
    },
    { "id": "hearing_done", "title": "Wurde deine Anhörung bereits durchgeführt?", "type": "yesno", "required": true,
      "showIf": "in_target == 'A' && asylum_applied == 'yes'"
    },
    { "id": "decision_received", "title": "Gibt es bereits eine Entscheidung?", "type": "yesno", "required": true,
      "showIf": "in_target == 'A' && asylum_applied == 'yes'"
    },
    { "id": "decision_type", "title": "Welche Entscheidung liegt vor?", "type": "single", "required": true,
      "showIf": "decision_received == 'yes'",
      "options": [
        { "value": "asyl", "label": "Asylberechtigung" },
        { "value": "refugee", "label": "Flüchtlingsschutz" },
        { "value": "subsidiary", "label": "Subsidiärer Schutz" },
        { "value": "ban", "label": "Nationales Abschiebungsverbot" },
        { "value": "rejected", "label": "Ablehnung / Unzulässigkeit" }
      ]
    },
    { "id": "appeal_filed", "title": "Hast du dagegen Rechtsmittel eingelegt (Klage/Beschwerde)?", "type": "yesno",
      "showIf": "decision_received == 'yes'"
    },

    { "id": "grounds", "title": "Welche Gründe treffen auf dich zu? (Mehrfachauswahl)", "type": "multi", "required": true,
      "options": [
        { "value": "religion", "label": "Religion" },
        { "value": "nationality", "label": "Nationalität / Ethnie" },
        { "value": "political", "label": "Politische Überzeugung / Aktivität" },
        { "value": "social", "label": "Soziale Gruppe (z. B. Frauen, LGBTIQ)" },
        { "value": "health", "label": "Gesundheitliche Gründe" },
        { "value": "wehrdienst", "label": "Wehr-/Militärdienst (Verweigerung/Verfolgung)" },
        { "value": "other", "label": "Andere Gründe" },
        { "value": "gulen", "label": "Gülen/FETÖ-Vorwurf (Türkei-spezifisch)" },
        { "value": "kurdish_activism", "label": "Kurdische politische Aktivitäten / HDP (Türkei-spezifisch)" },
        { "value": "journalism", "label": "Journalismus / Meinungsäußerung (Türkei-spezifisch)" }
      ]
    },
    { "id": "trigger_desc", "title": "In deinen Worten: Was ist passiert?", "type": "text" },
    { "id": "persecutor", "title": "Von wem geht die Verfolgung aus?", "type": "single", "required": true,
      "options": [
        { "value": "state", "label": "Staat / Behörden" },
        { "value": "private", "label": "Private / Gruppen" },
        { "value": "unknown", "label": "Unklar" }
      ]
    },
    { "id": "internal_protection", "title": "Hast du innerhalb deines Landes Schutz gesucht (Polizei/Umzug)?", "type": "yesno",
      "showIf": "persecutor == 'private' || persecutor == 'unknown'"
    },
    { "id": "no_internal_reason", "title": "Warum war Schutz im Land nicht möglich?", "type": "text",
      "showIf": "internal_protection == 'no'"
    },
    { "id": "trigger_date", "title": "Datum des fluchtauslösenden Ereignisses", "type": "date" },

    { "id": "visa_vs_trigger", "title": "Visum vor oder nach dem fluchtauslösenden Ereignis beantragt?", "type": "single",
      "showIf": "(persecutor == 'state') && (entry_mode == 'visa' || entry_mode == 'permit')",
      "options": [
        { "value": "before", "label": "Vor dem Ereignis" },
        { "value": "after", "label": "Nach dem Ereignis" },
        { "value": "unknown", "label": "Weiß ich nicht" }
      ]
    },

    { "id": "papiere_ort", "title": "Wo befinden sich deine Reisepässe/Ausweise?", "type": "text" },
    { "id": "have_evidence", "title": "Hast du Belege oder Dokumente für deine Angaben?", "type": "yesno", "required": true },
    { "id": "evidence_details", "title": "Welche Belege hast du? (z. B. Fotos, Bescheide, Chatverläufe)", "type": "text",
      "showIf": "have_evidence == 'yes'"
    },
    { "id": "family_contact", "title": "Hast du Kontakt zu deiner Familie im Herkunftsland?", "type": "single", "required": true,
      "options": [
        { "value": "regular", "label": "Regelmäßig" },
        { "value": "rare", "label": "Selten / unsicher" },
        { "value": "none", "label": "Kein Kontakt" }
      ]
    },
    { "id": "family_followup", "title": "Berichtet deine Familie von Nachfragen/Bedrohungen/Polizeibesuchen nach deiner Ausreise?", "type": "yesno", "required": true },
    { "id": "exile_activities", "title": "Hast du nach der Ausreise an Demonstrationen, Vereinen oder politischen Aktivitäten teilgenommen?", "type": "yesno", "required": true },
    { "id": "exile_activities_desc", "title": "Welche Aktivitäten? (Ort, Zeitraum, Gruppe/Partei)", "type": "text",
      "showIf": "exile_activities == 'yes'"
    },

    { "id": "tr_cases", "title": "Gab es Ermittlungen/Verfahren (z. B. Terrorpropaganda, Präsidentenbeleidigung)?", "type": "yesno",
      "showIf": "country == 'TR' && (grounds includes 'political' || grounds includes 'journalism' || grounds includes 'kurdish_activism' || grounds includes 'gulen')"
    },
    { "id": "tr_cases_details", "title": "Aktenzeichen/Behörde/Zeitraum (falls bekannt)", "type": "text",
      "showIf": "country == 'TR' && tr_cases == 'yes'"
    },
    { "id": "tr_lgbtiq", "title": "Gab es staatliche Repressionen gegen dich wegen LGBTIQ?", "type": "yesno",
      "showIf": "country == 'TR' && (grounds includes 'social')"
    },
    { "id": "tr_military", "title": "Bist du vom Wehrdienst betroffen (Pflicht/Einberufung/Verweigerung)?", "type": "yesno",
      "showIf": "country == 'TR' && gender == 'male'"
    },
    { "id": "tr_uyap_access", "title": "Hast du Zugang zu UYAP/E-Devlet oder Dokumente daraus?", "type": "yesno",
      "showIf": "country == 'TR' && persecutor == 'state'"
    },
    { "id": "tr_uyap_types", "title": "Welche UYAP/E-Devlet-Dokumente liegen vor?", "type": "multi",
      "showIf": "country == 'TR' && tr_uyap_access == 'yes'",
      "options": [
        { "value": "anklageschrift", "label": "Anklageschrift / Ermittlungsakte" },
        { "value": "durchsuchung", "label": "Durchsuchungsbeschluss" },
        { "value": "haftbefehl", "label": "Haftbefehl" },
        { "value": "ladung", "label": "Ladung / Vorladung" },
        { "value": "sonstiges", "label": "Sonstiges" }
      ]
    },

    { "id": "final_notes", "title": "Gibt es noch etwas Wichtiges, das wir wissen sollten?", "type": "text" }
  ,
    {
      "id": "summary",
      "title": "Zusammenfassung deiner Antworten",
      "type": "summary"
    },
    {
      "id": "email",
      "title": "Möchtest du das Ergebnis per E-Mail erhalten?",
      "type": "text",
      "description": "Bitte gib deine E-Mail-Adresse ein.",
      "required": true
    },
    {
      "id": "done",
      "title": "Fertig!",
      "description": "Vielen Dank für deine Angaben. Deine Auswertung wird nun erstellt.",
      "type": "text"
    }
]
}
