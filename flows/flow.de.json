{
  "version": "1.0",
  "locale": "de",
  "flow": [
    {
      "id": "intro",
      "type": "info",
      "headline": "Deine anonyme Befragung",
      "text": "Im Folgenden wirst Du zu Deinen Fluchtgründen befragt. Du musst keine persönlichen Daten angeben – keinen Namen, kein Geburtsdatum, keine Adresse. Antworte so konkret wie möglich.",
      "next": "alter_bucket"
    },

    {
      "id": "alter_bucket",
      "type": "radio",
      "question": "Wie alt bist Du?",
      "required": true,
      "options": [
        { "label": "0–17 Jahre",  "value": "0_17" },
        { "label": "18–25 Jahre", "value": "18_25" },
        { "label": "26–42 Jahre","value": "26_42" },
        { "label": "43–55 Jahre","value": "43_55" },
        { "label": "56–72 Jahre","value": "56_72" },
        { "label": "73–99 Jahre","value": "73_99" }
      ],
      "onAnswer": { "set": { "alter_bucket": "$value" } },
      "next": "minor_unbegleitet_hint"
    },

    {
      "id": "minor_unbegleitet_hint",
      "type": "radio",
      "question": "Nur wenn Du unter 18 Jahre alt bist: Reist Du unbegleitet?",
      "required": false,
      "options": [
        { "label": "Ja, unbegleitet", "value": "alleine" },
        { "label": "Nein, mit Elternteil", "value": "mit_eltern" }
      ],
      "onAnswer": { "set": { "unbegleitet": "$value" } },
      "next": "herkunftsland"
    },

    {
      "id": "herkunftsland",
      "type": "radio",
      "question": "Aus welchem Land kommst Du?",
      "required": true,
      "options": [
        { "label": "Türkei",      "value": "TR" },
        { "label": "Syrien",      "value": "SY" },
        { "label": "Afghanistan", "value": "AF" },
        { "label": "Iran",        "value": "IR" },
        { "label": "Irak",        "value": "IQ" }
      ],
      "onAnswer": { "set": { "herkunftsland": "$value" } },
      "next": "zielland"
    },

    {
      "id": "zielland",
      "type": "radio",
      "question": "Für welches Land möchtest Du Informationen zum Asylverfahren?",
      "required": true,
      "options": [
        { "label": "Deutschland", "value": "DE" },
        { "label": "Frankreich",  "value": "FR" },
        { "label": "Spanien",     "value": "ES" },
        { "label": "Italien",     "value": "IT" },

        { "label": "Belgien",               "value": "BE" },
        { "label": "Bulgarien",             "value": "BG" },
        { "label": "Dänemark",              "value": "DK" },
        { "label": "Estland",               "value": "EE" },
        { "label": "Finnland",              "value": "FI" },
        { "label": "Griechenland",          "value": "GR" },
        { "label": "Irland",                "value": "IE" },
        { "label": "Kroatien",              "value": "HR" },
        { "label": "Lettland",              "value": "LV" },
        { "label": "Litauen",               "value": "LT" },
        { "label": "Luxemburg",             "value": "LU" },
        { "label": "Malta",                 "value": "MT" },
        { "label": "Niederlande",           "value": "NL" },
        { "label": "Österreich",            "value": "AT" },
        { "label": "Polen",                 "value": "PL" },
        { "label": "Portugal",              "value": "PT" },
        { "label": "Rumänien",              "value": "RO" },
        { "label": "Schweden",              "value": "SE" },
        { "label": "Slowakei",              "value": "SK" },
        { "label": "Slowenien",             "value": "SI" },
        { "label": "Tschechien",            "value": "CZ" },
        { "label": "Ungarn",                "value": "HU" },
        { "label": "Zypern",                "value": "CY" }
      ],
      "onAnswer": { "set": { "zielland": "$value" } },
      "next": "im_zielland"
    },

    {
      "id": "im_zielland",
      "type": "radio",
      "question": "Befindest Du Dich bereits in {{zielland_label}}?",
      "required": true,
      "options": [
        { "label": "Ja, ich bin bereits dort", "value": "A" },
        { "label": "Nein, ich bin noch außerhalb", "value": "B" }
      ],
      "nextMap": { "A": "reiseweg_A", "B": "reiseweg_B_visa_plan" }
    },

    {
      "id": "reiseweg_A",
      "type": "radio",
      "question": "Wie bist Du eingereist?",
      "required": true,
      "options": [
        { "label": "Mit Visum", "value": "visum" },
        { "label": "Mit Aufenthaltstitel eines anderen EU-/Dublin-Staates", "value": "aufenthaltstitel" },
        { "label": "Ohne Visum / über Drittstaat / Sonstiges", "value": "ohne" }
      ],
      "onAnswer": { "set": { "reiseweg": "$value" } },
      "nextMap": { "visum": "visum_details_A", "aufenthaltstitel": "aufenthaltstitel_details_A", "ohne": "block_fluchtgruende_entry" }
    },

    {
      "id": "visum_details_A",
      "type": "radio",
      "question": "Welches Land hat Dein Einreisevisum ausgestellt?",
      "required": true,
      "options": [
        { "label": "Deutschland", "value": "DE" },
        { "label": "Frankreich",  "value": "FR" },
        { "label": "Spanien",     "value": "ES" },
        { "label": "Italien",     "value": "IT" },

        { "label": "Belgien",               "value": "BE" },
        { "label": "Bulgarien",             "value": "BG" },
        { "label": "Dänemark",              "value": "DK" },
        { "label": "Estland",               "value": "EE" },
        { "label": "Finnland",              "value": "FI" },
        { "label": "Griechenland",          "value": "GR" },
        { "label": "Irland",                "value": "IE" },
        { "label": "Kroatien",              "value": "HR" },
        { "label": "Lettland",              "value": "LV" },
        { "label": "Litauen",               "value": "LT" },
        { "label": "Luxemburg",             "value": "LU" },
        { "label": "Malta",                 "value": "MT" },
        { "label": "Niederlande",           "value": "NL" },
        { "label": "Österreich",            "value": "AT" },
        { "label": "Polen",                 "value": "PL" },
        { "label": "Portugal",              "value": "PT" },
        { "label": "Rumänien",              "value": "RO" },
        { "label": "Schweden",              "value": "SE" },
        { "label": "Slowakei",              "value": "SK" },
        { "label": "Slowenien",             "value": "SI" },
        { "label": "Tschechien",            "value": "CZ" },
        { "label": "Ungarn",                "value": "HU" },
        { "label": "Zypern",                "value": "CY" },

        { "label": "Norwegen",              "value": "NO" },
        { "label": "Schweiz",               "value": "CH" }
      ],
      "onAnswer": { "set": { "hat_visum": true, "visum_aussteller": "$value" } },
      "next": "block_fluchtgruende_entry"
    },

    {
      "id": "aufenthaltstitel_details_A",
      "type": "radio",
      "question": "Welches Land hat Deinen Aufenthaltstitel ausgestellt?",
      "required": true,
      "options": [
        { "label": "Deutschland", "value": "DE" },
        { "label": "Frankreich",  "value": "FR" },
        { "label": "Spanien",     "value": "ES" },
        { "label": "Italien",     "value": "IT" },

        { "label": "Belgien",               "value": "BE" },
        { "label": "Bulgarien",             "value": "BG" },
        { "label": "Dänemark",              "value": "DK" },
        { "label": "Estland",               "value": "EE" },
        { "label": "Finnland",              "value": "FI" },
        { "label": "Griechenland",          "value": "GR" },
        { "label": "Irland",                "value": "IE" },
        { "label": "Kroatien",              "value": "HR" },
        { "label": "Lettland",              "value": "LV" },
        { "label": "Litauen",               "value": "LT" },
        { "label": "Luxemburg",             "value": "LU" },
        { "label": "Malta",                 "value": "MT" },
        { "label": "Niederlande",           "value": "NL" },
        { "label": "Österreich",            "value": "AT" },
        { "label": "Polen",                 "value": "PL" },
        { "label": "Portugal",              "value": "PT" },
        { "label": "Rumänien",              "value": "RO" },
        { "label": "Schweden",              "value": "SE" },
        { "label": "Slowakei",              "value": "SK" },
        { "label": "Slowenien",             "value": "SI" },
        { "label": "Tschechien",            "value": "CZ" },
        { "label": "Ungarn",                "value": "HU" },
        { "label": "Zypern",                "value": "CY" },

        { "label": "Norwegen",              "value": "NO" },
        { "label": "Schweiz",               "value": "CH" }
      ],
      "onAnswer": { "set": { "hat_aufenthaltstitel": true, "aufenthaltstitel_aussteller": "$value" } },
      "next": "block_fluchtgruende_entry"
    },

    {
      "id": "reiseweg_B_visa_plan",
      "type": "radio",
      "question": "Wie beabsichtigst Du einzureisen?",
      "required": true,
      "options": [
        { "label": "Mit Visum des Ziellandes", "value": "ja_zielland" },
        { "label": "Mit Visum eines anderen Staates (Dublin-Teilnehmer)", "value": "nein_anders" },
        { "label": "Weiß noch nicht", "value": "unsicher" }
      ],
      "onAnswer": {
        "set": {
          "hat_visum": { "expr": "$value == 'ja_zielland'" },
          "visum_aussteller": { "expr": "$value == 'ja_zielland' ? $zielland : null" }
        }
      },
      "nextMap": { "nein_anders": "reiseweg_B_aussteller", "ja_zielland": "block_fluchtgruende_entry", "unsicher": "block_fluchtgruende_entry" }
    },

    {
      "id": "reiseweg_B_aussteller",
      "type": "radio",
      "question": "Welches Land wird voraussichtlich Dein Visum ausstellen?",
      "required": true,
      "options": [
        { "label": "Deutschland", "value": "DE" },
        { "label": "Frankreich",  "value": "FR" },
        { "label": "Spanien",     "value": "ES" },
        { "label": "Italien",     "value": "IT" },

        { "label": "Belgien",               "value": "BE" },
        { "label": "Bulgarien",             "value": "BG" },
        { "label": "Dänemark",              "value": "DK" },
        { "label": "Estland",               "value": "EE" },
        { "label": "Finnland",              "value": "FI" },
        { "label": "Griechenland",          "value": "GR" },
        { "label": "Irland",                "value": "IE" },
        { "label": "Kroatien",              "value": "HR" },
        { "label": "Lettland",              "value": "LV" },
        { "label": "Litauen",               "value": "LT" },
        { "label": "Luxemburg",             "value": "LU" },
        { "label": "Malta",                 "value": "MT" },
        { "label": "Niederlande",           "value": "NL" },
        { "label": "Österreich",            "value": "AT" },
        { "label": "Polen",                 "value": "PL" },
        { "label": "Portugal",              "value": "PT" },
        { "label": "Rumänien",              "value": "RO" },
        { "label": "Schweden",              "value": "SE" },
        { "label": "Slowakei",              "value": "SK" },
        { "label": "Slowenien",             "value": "SI" },
        { "label": "Tschechien",            "value": "CZ" },
        { "label": "Ungarn",                "value": "HU" },
        { "label": "Zypern",                "value": "CY" },

        { "label": "Norwegen",              "value": "NO" },
        { "label": "Schweiz",               "value": "CH" }
      ],
      "onAnswer": { "set": { "visum_aussteller": "$value" } },
      "next": "block_fluchtgruende_entry"
    },

    {
      "id": "block_fluchtgruende_entry",
      "type": "info",
      "headline": "Deine Fluchtgründe",
      "text": "Wähle alle Gründe, die auf Dich zutreffen. Danach kannst Du Details ergänzen.",
      "next": "fluchtgruende"
    },

    {
      "id": "fluchtgruende",
      "type": "checkbox",
      "question": "Welche Fluchtgründe treffen auf Dich zu?",
      "required": true,
      "options": [
        { "label": "Internationaler / innerstaatlicher Konflikt", "value": "konflikt" },
        { "label": "Willkürliche Gewalt / Folter",     "value": "gewalt" },

        { "label": "Religion",                                       "value": "religion" },
        { "label": "Nationalität / Ethnie",                          "value": "nationalitaet" },
        { "label": "Politische Überzeugung / Aktivität",             "value": "politisch" },
        { "label": "Zugehörigkeit zu einer sozialen Gruppe (z. B. Frauen, LGBTIQ+)", "value": "soziale_gruppe" },
        { "label": "Gesundheitliche Gründe",                         "value": "gesundheit" },
        { "label": "Wehr-/Militärdienst",  "value": "wehrdienst" },

        { "label": "Wirtschaftliche Gründe",                         "value": "wirtschaft" },
        { "label": "Familiäre Gründe",                               "value": "familie" },
        { "label": "Klimawandel / Umwelt",                           "value": "klima" },

        { "label": "Andere Gründe",                                  "value": "andere" }
      ],
      "onAnswer": { "set": { "fluchtgruende": "$value" } },
      "next": "flucht_details_freitext"
    },

    {
      "id": "flucht_details_freitext",
      "type": "textarea",
      "question": "In Deinen Worten: Was ist passiert?",
      "required": false,
      "onAnswer": { "set": { "flucht_ereignis_beschr": "$value" } },
      "next": "quelle_verfolgung"
    },

    {
      "id": "quelle_verfolgung",
      "type": "radio",
      "question": "Von wem geht die Verfolgung aus?",
      "required": true,
      "options": [
        { "label": "Staatliche Stellen (z. B. Polizei, Geheimdienst, Militär, Gerichte)", "value": "staat" },
        { "label": "Private/Organisationen (z. B. Familie, Clan, Miliz)",                 "value": "privat" },
        { "label": "Keine Angabe / Unsicher",                                             "value": "unsicher" }
      ],
      "onAnswer": { "set": { "quelle_verfolgung": "$value" } },
      "nextMap": { "privat": "innerstaatlicher_schutz_ja_nein", "unsicher": "innerstaatlicher_schutz_ja_nein", "staat": "plausi_nachflucht" }
    },

    {
      "id": "innerstaatlicher_schutz_ja_nein",
      "type": "radio",
      "question": "Hast Du innerhalb von {{herkunftsland_label}} versucht, Schutz zu bekommen?",
      "required": true,
      "options": [
        { "label": "Ja",        "value": "ja" },
        { "label": "Nein",      "value": "nein" },
        { "label": "Weiß nicht","value": "wd" }
      ],
      "onAnswer": { "set": { "innerstaatlicher_schutz_versucht": "$value" } },
      "next": "innerstaatlicher_schutz_details"
    },

    {
      "id": "innerstaatlicher_schutz_details",
      "type": "textarea",
      "question": "Bitte kurz erläutern.",
      "required": false,
      "onAnswer": { "set": { "innerstaatlicher_schutz_details": "$value" } },
      "next": "plausi_nachflucht"
    },

    {
      "id": "plausi_nachflucht",
      "type": "radio",
      "question": "Lebst Du Merkmale Deiner Überzeugung/Identität jetzt offen aus (z. B. politische Aktivität, religiöse Praxis, LGBTIQ)?",
      "required": true,
      "options": [
        { "label": "Ja",                 "value": "ja" },
        { "label": "Nein",               "value": "nein" },
        { "label": "Weiß nicht / noch nicht", "value": "wd" }
      ],
      "onAnswer": { "set": { "nachfluchtverhalten": "$value" } },
      "next": "abschluss_hint"
    },

    {
      "id": "abschluss_hint",
      "type": "info",
      "headline": "Vielen Dank!",
      "text": "Du kannst jetzt Deine individuelle PDF-Beratung bestellen. <br><br><a class=\"btn-primary\" href=\"/beratung.html\">Beratung bestellen (119&nbsp;€)</a>",
      "next": null
    }
  ]
}
